{
  "name": "@elaraai/e3-api-server",
  "version": "0.0.2-beta.31",
  "type": "module",
  "description": "East Execution Engine API Server - HTTP server exposing e3-core operations",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "e3-api-server": "dist/src/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./routes": {
      "types": "./dist/src/routes/index.d.ts",
      "default": "./dist/src/routes/index.js"
    },
    "./handlers": {
      "types": "./dist/src/handlers/index.d.ts",
      "default": "./dist/src/handlers/index.js"
    },
    "./beast2": {
      "types": "./dist/src/beast2.d.ts",
      "default": "./dist/src/beast2.js"
    }
  },
  "files": [
    "dist/src",
    "!dist/src/**/*.spec.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "npm run build && node --enable-source-maps --test 'dist/src/**/*.spec.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "npm run build && node --enable-source-maps dist/src/cli.js"
  },
  "keywords": [
    "east",
    "e3",
    "api",
    "server"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/elaraai/e3",
    "directory": "packages/e3-api-server"
  },
  "dependencies": {
    "@elaraai/e3-core": "*",
    "@elaraai/e3-types": "*",
    "@hono/node-server": "^1.13.0",
    "commander": "^12.0.0",
    "hono": "^4.6.0"
  },
  "peerDependencies": {
    "@elaraai/east": "beta"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.0.0",
    "eslint-plugin-headers": "^1.3.3",
    "typescript": "^5.6.0"
  }
}
