{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "*.ts",
    "generators/*.ts",
    "scenarios/*.ts"
  ],
  "references": [
    { "path": "../packages/e3" },
    { "path": "../packages/e3-cli" },
    { "path": "../packages/e3-core" }
  ]
}
